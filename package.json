{
  "name": "@busy-hour/blaze",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "rimraf dist && tsc --project tsconfig.build.json && resolve-tspaths",
    "prepublish": "pnpm build",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "release": "standard-version",
    "release:beta": "standard-version",
    "postrelease": "pnpm publish --access public && git push --follow-tags",
    "postrelease:beta": "pnpm publish --tag next --access public && git push --follow-tags",
    "check-types": "tsc --project tsconfig.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@hono/node-server": "^1.8.1",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5",
    "resolve-tspaths": "^0.8.18",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "hono": "^3.12.10",
    "zod": "^3.22.4"
  },
  "keywords": [
    "hono",
    "backend",
    "event-driven",
    "blaze",
    "framework",
    "scalable"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "CONTRIBUTING.md",
    "CHANGELOG.md"
  ]
}
